{
  "compilerOptions": {
    "target": "ESNext",        // Ou ES6, se necessário
    "module": "commonjs",      // Ou outro módulo conforme necessário
    "strict": true,            // Habilitar modo estrito
    "esModuleInterop": true,   // Permitir a interoperabilidade de módulos
    "skipLibCheck": true,      // Ignorar verificações de tipos em arquivos de bibliotecas
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "./dist"         // Certifique-se de que o diretório de saída está correto
  },
  "include": ["src/**/*.ts"],  // Incluir arquivos .ts na pasta src
  "exclude": ["node_modules"]  // Excluir node_modules da compilação
}